<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BaseTextView-->
    <style name="BaseTextView.Normal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="BaseTextView.Small" parent="BaseTextView.Normal">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseTextView.Large" parent="BaseTextView.Normal">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--BaseTextViewTitle-->
    <style name="BaseTextViewTitle.Normal" parent="BaseTextView.Normal">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--BaseButton-->
    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <!--BaseCategoryTextView-->
    <style name="BaseCategoryTextView.Normal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:background">@drawable/shape_category</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">6dp</item>
    </style>
</resources>