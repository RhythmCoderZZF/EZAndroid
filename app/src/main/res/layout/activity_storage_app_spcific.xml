<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/BaseCategoryTextView.Normal"
        android:text="internal文件" />

    <Button
        android:id="@+id/btn_internal_cache"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写读一个文本文件到internal cache" />
    <Button
        android:id="@+id/btn_internal_file"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="将cache内容读取并copy到internal file" />

    <TextView
        style="@style/BaseCategoryTextView.Normal"
        android:text="external文件" />
    <Button
        android:id="@+id/btn_external_cache"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写读一个文本文件到external cache" />

    <Button
        android:id="@+id/btn_external_file"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="将cache内容读取并copy到external file" />

</LinearLayout>