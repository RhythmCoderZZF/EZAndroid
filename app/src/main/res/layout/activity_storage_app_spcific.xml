<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/BaseCategoryTextView.Normal"
        android:text="persistent files" />

    <Button
        android:id="@+id/btnCreateFile"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access and store files" />


    <Button
        android:id="@+id/btnStoreFile"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store a file using a stream" />
    <Button
        android:id="@+id/btnAccessFile"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access a file using a stream" />
</LinearLayout>